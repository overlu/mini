{
    "name": "overlu/mini",
    "type": "project",
    "description": "A simple, lightweight and high-performance PHP coroutine framework.",
    "keywords": [
        "php",
        "swoole",
        "coroutine",
        "simple",
        "mini",
        "framework",
        "fast",
        "api",
        "websocket"
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-swoole": ">=4.5",
        "overlu/mini-framework": "~3.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "overlu/var-dumper": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Utils/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "start": [
            "php bin/mini start"
        ],
        "artisan": [
            "php bin/artisan"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "\\Mini\\PackageScript::postAutoloadDump"
        ]
    }
}
